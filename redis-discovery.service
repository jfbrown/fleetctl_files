[Unit]
Description=Announce Redis
BindsTo=redis.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/database/redis '{ \"host\": \"%H\", \"port\": 3306, \"version\": \"52c7248a14\" }' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/database/redis

[X-Fleet]
X-ConditionMachineOf=redis.service
