[Unit]
Description=Announce MySQL
BindsTo=mysql.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/database/mysql '{ \"host\": \"%H\", \"port\": 3306, \"version\": \"52c7248a14\" }' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/database/mysql

[X-Fleet]
X-ConditionMachineOf=mysql.service
