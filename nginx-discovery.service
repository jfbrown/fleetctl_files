[Unit]
Description=Announce Nginx
BindsTo=nginx.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/website/nginx '{ \"host\": \"%H\", \"port\": 80, \"version\": \"52c7248a14\" }' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/website/nginx

[X-Fleet]
X-ConditionMachineOf=nginx.service
